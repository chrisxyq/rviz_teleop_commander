<?xml version="1.0"?> 
<launch>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="config" default="false" />
  <arg unless="$(arg config)" name="command_args" value="" />


  <param name="robot_description" command="rosrun xacro xacro --inorder '$(find schunk)/urdf/schunk_all.urdf.xacro'" />
  <param name="robot_description2" textfile="$(find schunk)/urdf/chuanci.urdf" />   
  <arg     if="$(arg config)" name="command_args" value="-d $(find schunk)/config/chuanci.rviz" />
  
  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)" pkg="rviz" type="rviz" respawn="false"
	args="$(arg command_args)" output="screen">
    <rosparam command="load" file="$(find lwa_config)/config/kinematics.yaml"/>
  </node>

</launch>
