<launch>
  <!-- Launch Gazebo  -->
  <include file="$(find schunk_gazebo)/launch/schunk_gazebo_world.launch" />   


  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find schunk_gazebo)/config/schunk_gazebo_control.yaml" command="load"/>


  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/arm" args="joint_state_controller
      arm_1_joint_pos_controller
      arm_2_joint_pos_controller
      arm_3_joint_pos_controller
      arm_4_joint_pos_controller
      arm_5_joint_pos_controller
      arm_6_joint_pos_controller
   
					  "/>


  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/schunk/joint_states" />
  </node>

</launch>
